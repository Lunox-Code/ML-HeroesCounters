<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ml_heroescounters">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity_rolesupport"
                  android:label="@string/activityrolesupport"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity
                android:name=".activity_rolemarksman"
                android:label="@string/activityrolemarksman"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity
                android:name=".activity_rolemage"
                android:label="@string/activityrolemage"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity
                android:name=".activity_rolefighter"
                android:label="@string/activityrolefighter"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity
                android:name=".activity_roleassassin"
                android:label="@string/activityroleassassin"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".activity_splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity_heroe_selected"
                android:label="@string/activityheroeinformation"
                android:parentActivityName=".activity_role_tank">
        </activity>
        <activity
                android:name=".activity_role_tank"
                android:label="@string/activityroletank"
                android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>