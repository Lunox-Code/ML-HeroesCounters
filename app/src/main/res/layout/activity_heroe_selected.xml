<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_heroe_selected"
        android:background="@color/colorforback">


    <RelativeLayout
            android:background="@color/blackfond"
            android:id="@+id/main_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:textStyle="bold"
                android:textColor="@color/colorFond"
                android:id="@+id/main_toolbar_title"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="166dp"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/main_toolbar_layout"/>
    <TextView
            android:textColor="@color/colorFond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/imageView"
            android:id="@+id/tvName" android:layout_marginTop="9dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="178dp"/>
    <RelativeLayout
            android:background="@color/blackfond"
            android:id="@+id/main_toolbar_layout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal" android:layout_marginTop="9dp" android:layout_below="@+id/tvName">

        <TextView
                android:textStyle="bold"
                android:textColor="@color/colorFond"
                android:id="@+id/main_toolbar_title1"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="166dp"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/main_toolbar_layout1"/>
    <TextView
            android:textColor="@color/colorFond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/tvName2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="178dp" android:layout_marginTop="9dp" android:layout_below="@+id/imageView2"/>
    <RelativeLayout
            android:background="@color/blackfond"
            android:id="@+id/main_toolbar_layout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal" android:layout_marginTop="4dp" android:layout_below="@+id/tvName2">

        <TextView
                android:textStyle="bold"
                android:textColor="@color/colorFond"
                android:id="@+id/main_toolbar_title2"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
            android:textColor="@color/colorFond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/tvName3" android:layout_alignParentEnd="true"
            android:layout_marginEnd="177dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/imageView3"/>
    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="166dp"
            android:layout_marginTop="7dp" android:layout_below="@+id/main_toolbar_layout2"
    />

</RelativeLayout>